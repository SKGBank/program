#include <stdio.h>

int main() {
	
  int A[6] , B[6] , Answer[7] ;
  char Operator ;

    printf("Enter Number A : \n") ;
        printf( "A[0] :  " , A ) ;
        scanf( "%d" , &A[0] ) ;

            printf( "A[1] :  " , A ) ;
            scanf( "%d" , &A[1] ) ;

                printf( "A[2] :  " , A ) ;
                scanf( "%d" , &A[2] );

                    printf( "A[3] :  " , A ) ;
                    scanf( "%d" , &A[3] ) ;

                        printf( "A[4] :  " , A ) ;
                        scanf( "%d" , &A[4] ) ;

                                printf( "A[5] :  " , A ) ;
                                scanf( "%d" , &A[5] ) ;

    printf("Enter Number A : \n") ;
        printf( "B[0] :  " , B ) ;
        scanf( "%d" , &B[0] ) ;

            printf( "B[1] :  " , B ) ;
            scanf( "%d", &B[1] ) ;

                printf( "B[2] :  " , B ) ;
                scanf( "%d" , &B[2] ) ;

                    printf( "B[3] :  " , B ) ;
                    scanf( "%d" , &B[3] ) ;

                        printf( "B[4] :  " , B ) ;
                        scanf( "%d" , &B[4] ) ;

                            printf( "B[5] :  " , B ) ;
                            scanf( "%d" , &B[5] ) ;

  //Operator
  printf("Operator :  \n");
  scanf(" %c", &Operator);


  switch( Operator ) {
    case '+' :
        Answer[1] = A[0] + B[0] ;
        Answer[2] = A[1] + B[1] ;
        Answer[3] = A[2] + B[2] ;
        Answer[4] = A[3] + B[3] ;
        Answer[5] = A[4] + B[4] ;
        Answer[6] = A[5] + B[5] ;
        break ;
    case '-' :
        Answer[1] = A[0] - B[0] ;
        Answer[2] = A[1] - B[1] ;
        Answer[3] = A[2] - B[2] ;
        Answer[4] = A[3] - B[3] ;
        Answer[5] = A[4] - B[4] ;
        Answer[6] = A[5] - B[5] ;
        break ;
  }//end switch
  
  //output
  printf( "\n      index     \t  X  0  1  2  3  4  5 \n \n " ) ;
  printf( "    Number A : \t     %d  %d  %d  %d  %d  %d \n " , A[0] , A[1] , A[2] , A[3] , A[4] , A[5] ) ;
  printf( "    Operator : \t                       %c \n ", Operator ) ;
  printf( "    Number B : \t     %d  %d  %d  %d  %d  %d \n " , B[0] , B[1] , B[2] , B[3] , B[4] , B[5] ) ;
  printf( "                  --------------------- \n ") ;
  printf( "    Answer   : \t  %d  %d  %d  %d  %d  %d  %d \n " , Answer[0] , Answer[1] , Answer[2] , Answer[3] , Answer[4] , Answer[5] , Answer[6] , Answer[7] ) ;
  printf( "                 ===================== \n ") ;
  return 0;
}//end function
